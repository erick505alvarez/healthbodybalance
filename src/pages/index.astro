---
import Layout from '../layouts/Layout.astro';
import RecipeCard from '../components/RecipeCard.astro';

const recipes = [
  {
    title: "Quinoa Bowl",
    image: "quinoa.webp",
    alt: "Healthy quinoa bowl"
  },
  {
    title: "Air Fryer Chips",
    image: "air-fryer-chips.webp",
    alt: "Crispy air fryer chips"
  },
  {
    title: "Grilled Chicken Salad",
    image: "grilled-chicken-salad.webp",
    alt: "Fresh grilled chicken salad"
  },
  {
    title: "Firecracker Shrimp",
    image: "firecracker-shrimp.webp",
    alt: "Spicy firecracker shrimp"
  }
];
---

<Layout title="Health Body Balance - Building a Healthy Community">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
        <span class="block">Health Body Balance</span>
        <span class="block text-blue-600">Your Journey to Wellness</span>
      </h1>
      <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
        Join our community of health-minded individuals dedicated to achieving balance in body, mind, and spirit.
      </p>
      <div class="mt-5">
        <a 
          href="https://www.facebook.com/profile.php?id=61574484063822"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
        >
          Follow us on Facebook
        </a>
      </div>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {recipes.map((recipe) => (
        <RecipeCard {...recipe} />
      ))}
    </div>
  </main>
</Layout>
